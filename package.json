{
  "private": false,
  "displayName": "Homebridge Hyundai BlueLink",
  "name": "homebridge-hyundai-bluelink",
  "version": "1.4.1",
  "description": "Integrates with remote functionality for Hyundai cars.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/athal7/homebridge-hyundai-bluelink.git"
  },
  "bugs": {
    "url": "https://github.com/athal7/homebridge-hyundai-bluelink/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon 2>&1 | tee /tmp/homebridge.log",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "bluelinky": "^8.1.0"
  },
  "devDependencies": {
    "@spotify/prettier-config": "^15.0.0",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "homebridge": "^1.6.1",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/athal7/homebridge-hyundai-bluelink#readme",
  "author": "Andrew Thal",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/athal7"
    },
    {
      "type": "buymeacoffee",
      "url": "https://buymeacoff.ee/athal7"
    }
  ]
}
